{
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login/index.html"
      },
      {
        "source": "/signup",
        "destination": "/signup/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
